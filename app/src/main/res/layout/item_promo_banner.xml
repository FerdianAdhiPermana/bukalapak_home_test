<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_margin_8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_promo_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="@dimen/padding_margin_5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_promo_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_black" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_promo_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_16dp"
        android:text="@android:string/emptyPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_promo_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>